{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: Start (docker compose up)",
      "type": "shell",
      "command": "docker compose up --build",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Dev: Stop (docker compose down)",
      "type": "shell",
      "command": "docker compose down",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Dev: Logs (docker compose logs)",
      "type": "shell",
      "command": "docker compose logs -f",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Drafts checker",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "code/drafts-checker.py",
        "--drafts-dir",
        "_drafts",
        "--verbose",
        "--log-level",
        "DEBUG"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Drafts checker (code cwd, ../_drafts, use-ai)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "drafts-checker.py",
        "--drafts-dir",
        "../_drafts",
        "--use-ai",
        "--log-level",
        "DEBUG",
        "--verbose"
      ],
      "options": {
        "cwd": "${workspaceFolder}/code"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Debug: PWD",
      "type": "shell",
      "command": "pwd",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Drafts checker TEST python",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "--version"
      ],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "UnitTests: unittest (discover)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "unittest",
        "discover",
        "-s",
        "code/_Tests",
        "-p",
        "test_*.py",
        "-v"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "CI: quick (UnitTests + Drafts checker)",
      "dependsOn": [
        "UnitTests: unittest (discover)",
        "Drafts checker"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": "test"
    }
  ]
}

